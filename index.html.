<script>
let currentUser = localStorage.getItem("educycleUser");

if(currentUser){
  document.getElementById("loginStatus").innerText =
    "Logged in as: " + currentUser;
  document.getElementById("notes").classList.remove("hidden");
}

function login(){
  let name = document.getElementById("username").value;
  if(name === ""){
    alert("Enter name");
    return;
  }
  localStorage.setItem("educycleUser", name);
  location.reload();
}

function uploadNote(){
  let file = document.getElementById("pdfFile").files[0];
  if(!file){
    alert("Select PDF");
    return;
  }
  let notes = JSON.parse(localStorage.getItem("educycleNotes")) || [];
  notes.push(file.name);
  localStorage.setItem("educycleNotes", JSON.stringify(notes));
  showNotes();
}

function showNotes(){
  let notes = JSON.parse(localStorage.getItem("educycleNotes")) || [];
  let list = document.getElementById("notesList");
  list.innerHTML = "";
  notes.forEach(n=>{
    let div = document.createElement("div");
    div.className = "note";
    div.innerText = n;
    list.appendChild(div);
  });
}
showNotes();
</script>

